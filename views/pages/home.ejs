<!-- breadcrumbs -->
<ol class="breadcrumb">
    <li class="active">Home</li>
</ol>

<div class="jumbotron text-center customizedBigIceland bg-no-overlay">
    <div class="textInTransparentBlack">
        <h1><img alt="MyPortfolio" class="img-circle hvr-bounce-in" src="/images/myPortfolio-logo-black-100.png"><span>ortfolio</span></h1>
        <h2>Welcome to your own portfolio builder</h2>
    </div>

    <div class="textInTransparentBlack homeConcept">
        <p class="homeConceptText"><span class="hvr-forward"><span class="glyphicon glyphicon-briefcase" aria-hidden="true"></span> MyPortfolio allows you to create a modern resume with great visual impact, in few easy steps</span></p>
        <p class="homeConceptText"><span class="hvr-forward"><span class="glyphicon glyphicon-share" aria-hidden="true"></span> You can share your projects efficiently and in no time</span></p>
        <p class="homeConceptText"><span class="hvr-forward"><span class="glyphicon glyphicon-picture" aria-hidden="true"></span> Thanks to its compact and outstanding design, portfolios fit perfectly on any device</span></p>
        <p class="homeConceptText"><span class="hvr-forward"><span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span> ...enjoy</span></p>
    </div>

    <% if ((typeof user !== 'undefined') && (user)) { %>
    <div class="row">
        <div class="col-sm-3 contentCentered">
            <a class="btn btn-success hvr-float-shadow" href="/portfolios" role="button">
                <span class="glyphicon glyphicon-list" aria-hidden="true"></span> List Portfolios
            </a>
        </div>
        <div class="col-sm-3 contentCentered">
            <a class="btn btn-success hvr-float-shadow" href="/portfolios/<%= user.google.eslug %>" role="button">
                <span class="glyphicon glyphicon-picture" aria-hidden="true"></span> View Portfolio
            </a>
        </div>
        <div class="col-sm-3 contentCentered">
            <a class="btn btn-success hvr-float-shadow" href="/portfolios/editPortfolioInfos" role="button">
                <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Edit Profile Infos
            </a>
        </div>
        <div class="col-sm-3 contentCentered">
            <a class="btn btn-success hvr-float-shadow" href="/portfolios/editPortfolioProjects" role="button">
                <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Edit Projects
            </a>
        </div>
    </div>
    <% } else { %>
    <div class="row">
        <div class="col-sm-6 contentCentered">
            <a class="btn btn-success btn-lg hvr-float-shadow" href="/portfolios" role="button">
                <span class="glyphicon glyphicon-list" aria-hidden="true"></span> List Portfolios
            </a>
        </div>
        <div class="col-sm-6 contentCentered">
            <a class="btn btn-success btn-lg hvr-float-shadow" href="/auth/google" role="button">
                <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> Login with Google
            </a>
        </div>
    </div>
    <% } %>
</div>

<% if(errors.length > 0) { %>
    <div class="alert alert-danger">
        <% for(error of errors) { %>
            <%= error %><br>
        <% } %>
    </div>
<% } %>

<div class="row">
    <div id="share" class="col-sm-12 contentCentered"></div>
</div>

<script>
    $(function () {
        $("#share").jsSocials({
            showCount: false,
            showLabel: false,
            shareIn: "popup",
            shares: ["email", "twitter", "facebook", "googleplus", "linkedin", "pinterest", "stumbleupon", "whatsapp"]
        });
    });
</script>
