<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>MyPortfolio</title>

    <!-- css -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="/css/style.css">

    <!-- JS  -->
    <script src="//code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <!-- Fancybox 3 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.1.25/jquery.fancybox.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.1.25/jquery.fancybox.min.js"></script>

    <!-- Include Code Mirror CSS. -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.3.0/codemirror.min.css">

    <!-- Summernote WYSIWYG -->
    <link href="/extern/summernote/summernote.css" rel="stylesheet">
    <script src="/extern/summernote/summernote.min.js"></script>

</head>
<body>

    <!-- header -->
    <header id="site-header">
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="collapsed navbar-toggle" data-toggle="collapse" data-target="#myportfolio-navbar-collapse" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="/">
                        <img alt="MyPortfolio" class="img-circle myPortfolioLogo" src="/images/myPortfolio-logo-40.png">
                    </a>
                </div>

                <div class="collapse navbar-collapse" id="myportfolio-navbar-collapse">
                    <ul class="nav navbar-nav navbar">
                        <li><a href="/portfolios"><span class="glyphicon glyphicon-picture" aria-hidden="true"></span> Portfolios</a></li>
                    </ul>

                    <ul class="nav navbar-nav navbar-right">
                        <% if ((typeof user !== 'undefined') && (user)) { %>
                            <li><a href="/portfolios/editPortfolio"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Edit portfolio</a></li>
                            <li><a href="/logout"><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> Logout</a></li>
                            <li><img class="img-circle" alt="<%= user.google.name %>" src="<%= user.google.imageUrl %>"></li>
                        <% } else { %>
                            <li>
                                <a href="/auth/google"><span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> Login with Google</a>
                            </li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- main -->
    <main id="site-main">
        <div class="container">
            <%- body %>
        </div>
    </main>

    <!-- footer -->
    <footer id="site-footer">
        Copyright &copy; 2017 <a href="/portfolios/117555122180909325816">Danilo Carrabino</a>
    </footer>

</body>
</html>
