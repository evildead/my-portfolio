<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>MyPortfolio</title>

    <!-- Jquery / Jquery-ui -->
    <script src="/extern/jquery/jquery-3.2.1.min.js"></script>
    <link rel="stylesheet" href="/extern/jquery-ui/jquery-ui.min.css">
    <script src="/extern/jquery-ui/jquery-ui.min.js"></script>

    <!-- Jquery-sortable (https://johnny.github.io/jquery-sortable/) -->
    <script src="/extern/jquery-sortable/jquery-sortable-min.js"></script>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="/extern/bootstrap/css/bootstrap.min.css">
    <script src="/extern/bootstrap/js/bootstrap.min.js"></script>

    <!-- Font-awesome -->
    <link href="/extern/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />

    <!-- Fancybox 3 -->
    <link rel="stylesheet" href="/extern/fancybox/jquery.fancybox.min.css" />
    <script src="/extern/fancybox/jquery.fancybox.min.js"></script>

    <!-- Code Mirror -->
    <link rel="stylesheet" href="/extern/codemirror/codemirror.css">
    <script src="/extern/codemirror/codemirror.js"></script>

    <!-- Summernote WYSIWYG -->
    <link href="/extern/summernote/summernote.css" rel="stylesheet">
    <script src="/extern/summernote/summernote.min.js"></script>

    <!-- Custom styles -->
    <link rel="stylesheet" href="/css/style.css">

</head>
<body>

    <!-- header -->
    <header id="site-header">
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="collapsed navbar-toggle" data-toggle="collapse" data-target="#myportfolio-navbar-collapse" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="/">
                        <img alt="MyPortfolio" class="img-circle myPortfolioLogo" src="/images/myPortfolio-logo-40.png">
                    </a>
                </div>

                <div class="collapse navbar-collapse" id="myportfolio-navbar-collapse">
                    <ul class="nav navbar-nav navbar">
                        <li><a href="/portfolios"><span class="glyphicon glyphicon-picture" aria-hidden="true"></span> Portfolios</a></li>
                    </ul>

                    <ul class="nav navbar-nav navbar-right">
                        <% if ((typeof user !== 'undefined') && (user)) { %>
                            <li><a href="/portfolios/editPortfolio"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Edit portfolio</a></li>
                            
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle userImage" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    <img class="img-circle" alt="<%= user.google.name %>" src="<%= user.google.imageUrl %>"> <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><p class="dropdownUserDetails"><%= user.google.name %></p></li>
                                    <li><p class="dropdownUserDetails"><%= user.google.email %></p></li>
                                    <li role="separator" class="divider"></li>
                                    <li><a href="/portfolios/<%= user.google.id %>">View portfolio</a></li>
                                    <li><a href="/logout">Logout</a></li>
                                </ul>
                            </li>
                        <% } else { %>
                            <li>
                                <a href="/auth/google"><span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> Login with Google</a>
                            </li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- main -->
    <main id="site-main">
        <div class="container">
            <%- body %>
        </div>
    </main>

    <!-- footer -->
    <footer id="site-footer">
        Copyright &copy; 2017 <a href="/portfolios/117555122180909325816">Danilo Carrabino</a>
    </footer>

</body>
</html>
